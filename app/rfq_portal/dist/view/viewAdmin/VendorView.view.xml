<mvc:View controllerName="rfqportal.controller.AdminController.VendorView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core">

    <f:FlexibleColumnLayout id="fcl" layout="OneColumn" backgroundDesign="Solid">
        <f:beginColumnPages>
            <Page id="vendorPage" title="Vendor Management">
                <content>
                    <VBox id="vendorTableMainVBox" class="sapUiMediumMargin">
                        <Table id="vendorTable" items="{/Vendors}" growing="true" growingThreshold="20">
                            <headerToolbar>
                                <Toolbar>
                                    <Title text="Vendor List"/>
                                    <ToolbarSpacer/>
                                    <SearchField search="onSearch" width="15rem"/>
                                    <Button text="Refresh" icon="sap-icon://refresh" press="onRefresh"/>
                                </Toolbar>
                            </headerToolbar>
                            <columns>
                                <Column width="15%">
                                    <Text text="Vendor ID" maxLines="1"/>
                                </Column>
                                <Column width="25%">
                                    <Text text="Vendor Name" maxLines="1"/>
                                </Column>
                                <Column width="25%">
                                    <Text text="Email" maxLines="1"/>
                                </Column>
                                <Column width="20%">
                                    <Text text="Country"/>
                                </Column>
                                <Column width="15%">
                                    <Text text="Status"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem press="onVendorPress" type="Navigation">
                                    <cells>
                                        <Text text="{ID}"/>
                                        <Text text="{name}"/>
                                        <Text text="{email}"/>
                                        <Text text="{country}"/>
                                        <ObjectStatus text="{path: 'status', formatter: '.formatStatus'}" state="{path: 'status', formatter: '.formatStatusState'}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </VBox>
                </content>
            </Page>
        </f:beginColumnPages>

        <f:midColumnPages>
            <!-- VendorDetail will be loaded here dynamically -->
        </f:midColumnPages>
    </f:FlexibleColumnLayout>
</mvc:View>