<mvc:View
    controllerName="rfqportal.controller.Contract"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m">
    
    <Page id="contractPage" title="Contract Management" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <VBox class="sapUiMediumMargin">
                <Panel headerText="Contract Information" class="sapUiResponsiveMargin">
                    <content>
                        <VBox class="sapUiMediumMargin">
                            <Label text="Contract ID:" class="sapUiTinyMarginBottom"/>
                            <Input id="contractIdInput" 
                                   value="{contract>/ID}" 
                                   placeholder="Enter Contract ID"/>
                            
                            <Label text="Contract Title:" class="sapUiSmallMarginTop sapUiTinyMarginBottom"/>
                            <Input id="contractTitleInput" 
                                   value="{contract>/title}" 
                                   placeholder="Enter Contract Title"/>
                            
                            <Label text="Description:" class="sapUiSmallMarginTop sapUiTinyMarginBottom"/>
                            <TextArea id="contractDescriptionInput" 
                                      value="{contract>/description}" 
                                      placeholder="Enter Description" 
                                      rows="3"/>
                            
                            <Label text="Status:" class="sapUiSmallMarginTop sapUiTinyMarginBottom"/>
                            <Select id="statusSelect" selectedKey="{contract>/status}">
                                <core:Item key="A" text="Active"/>
                                <core:Item key="I" text="Inactive"/>
                                <core:Item key="P" text="Pending"/>
                            </Select>
                        </VBox>
                    </content>
                </Panel>
                
                <Panel headerText="Actions" class="sapUiResponsiveMargin">
                    <content>
                        <HBox class="sapUiMediumMargin">
                            <Button text="Save" 
                                    type="Emphasized" 
                                    press="onSave" 
                                    class="sapUiTinyMarginEnd"/>
                            <Button text="Cancel" 
                                    press="onCancel" 
                                    class="sapUiTinyMarginEnd"/>
                            <Button text="Delete" 
                                    type="Reject" 
                                    press="onDelete"/>
                        </HBox>
                    </content>
                </Panel>
            </VBox>
        </content>
    </Page>
    
</mvc:View>